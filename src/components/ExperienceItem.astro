---
interface Props {
  title: string;
  date: string;
  description: string;
}

const { title, date, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white-700"
>
</div>
<time
  class="mb-1 text-md font-normal leading-none text-gray-300 dark:text-gray-300"
  >{date}</time
>
<h3 class="text-xl font-semibold text-yellow-200/90">
  {title}
</h3>
<p class="mb-4 text-lg font-normal text-gray-500 dark:text-gray-400">
  {description}
</p>
